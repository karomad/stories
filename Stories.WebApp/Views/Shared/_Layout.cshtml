<!DOCTYPE html>
<html ng-app="myapp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stories</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link href="~/Scripts/ng-tags-input/ng-tags-input.css" rel="stylesheet" />
    <link href="~/Scripts/ng-tags-input/ng-tags-input.bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/ladda/dist/ladda-themeless.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container" ng-controller="signalrController">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Stories", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@Html.IsSelected("Story", "Index")">@Html.ActionLink("My Stories", "Index", "Story")</li>
                    <li class="@Html.IsSelected("Group", "Index")">@Html.ActionLink("Groups", "Index", "Group")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a>Hello @Stories.WebApp.Helpers.SessionManager.CurrentUser.Name </a></li>
                    <li><a href="@Url.Action("Logout", "User")"><i class="glyphicon glyphicon-log-out"></i>  Log Out</a></li>
                </ul>
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/app/utils.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/ng-tags-input/ng-tags-input.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/angular-moment.min.js"></script>
    <script src="~/Scripts/ladda/dist/spin.min.js"></script>
    <script src="~/Scripts/ladda/dist/ladda.min.js"></script>
    <script src="~/Scripts/angular-ladda/dist/angular-ladda.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <script src="~/Scripts/app/controllers/signalrController.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        var currentUserId = '@Stories.WebApp.Helpers.SessionManager.CurrentUser.Id';
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>
