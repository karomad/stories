
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" ng-controller="storiesListController">

    <div class="row m-t-15">
        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="@Url.Action("AddEditStory", "Story", new { storyId = 0})" class="btn btn-success">New Story</a>
                </div>
                <div class="panel-body">
                    <div class="row m-t-15">
                        <div ng-repeat="story in stories">
                            <div class="col-md-6">
                                <div class="thumbnail box">
                                    <div class="caption">
                                        <h3 ng-bind="story.Title"></h3>
                                        <h5 ng-bind="story.Description"></h5>
                                        <hr />
                                        <a ng-href="/Story/AddEditStory?storyId={{story.Id}}" class="btn btn-default btn-xs pull-right" role="button">
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </a>
                                        <a ng-click="storyDetails(story.Id)" class="btn btn-default btn-xs" role="button">More Info</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

            </div>

        </div>

    </div>
    <div class="row m-t-15">
        <div class="col-md-4 col-md-offset-4">
            <button type="button" ladda="isLoading" data-spinner-color="#999999" data-style="slide-up"  class="btn btn-default btn-block" ng-click="loadMoreStories()">Show More</button>

        </div>
    </div>
    @Html.Partial("_StoryDetails")
</div>

@section Scripts {
    <script src="~/Scripts/app/services/storyService.js"></script>

    <script src="~/Scripts/app/controllers/storyController.js"></script>
}